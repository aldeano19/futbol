<p id="notice"><%= notice %></p>

<h1>Statistics</h1>

<table class="table">
  <thead class="thead-dark">
    <tr>
      <th>User</th>
      <th>Game</th>
      <th>Type</th>
      <th>Total</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @statistics.each do |statistic| %>
      <tr>
        <td><%= statistic.user.name %></td>
        <td><%= statistic.game.scheduled_date %></td>
        <td><%= statistic.stat_type %></td>
        <td><%= statistic.total %></td>
        <td><%= link_to 'Show', statistic %></td>
        <td><%= link_to 'Edit', edit_statistic_path(statistic) %></td>
        <td><%= link_to 'Destroy', statistic, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Statistic', new_statistic_path %>
