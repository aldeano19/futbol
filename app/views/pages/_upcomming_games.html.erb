<div class="border border-primary info-preview">
  <h1 class="games-preview-title text-center">Upcoming Games</h1>

  <div class="preview-table table-responsive">
    <table class="table table-sm table-hover text-center header-fixed">
      <thead class="thead-dark">
      <tr>
        <th>Date</th>
        <th>Place</th>

        <th>Team A</th>
        <th>Team B</th>

        <th>Format</th>

        <th colspan="3"></th>
      </tr>
      </thead>

      <tbody>
      <% @games.each do |game| %>
        <tr onclick="window.location = '/games/<%= game.id %>'">
          <td>
            <%= dateFormatTwo(game.scheduled_date) %>
          </td>

          <td>
            <%= game.where %>
          </td>

          <td>
            <%= game.team_a.name %>
          </td>

          <td>
            <%= game.team_b.name %>
          </td>

          <td>
            <%= game.game_format.name %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
