


<div class="col-md-6 table-responsive text-center ">
  <h4><%= dateFormatTwo(@next_game.scheduled_date) %></h4>

  <table class="table table-striped table-bordered table-hover table-sm">
    <thead>
      <th bgcolor="#f08080"><%= @next_game.team_a.name %></th>
      <th bgcolor="#add8e6"> <%= @next_game.team_b.name %></th>
    </thead>

    <tbody>

      <% team_a_players = @next_game.team_a.players%>
      <% team_b_players = @next_game.team_b.players%>
      <% size = [team_a_players.length, team_b_players.length].max %>
      <% (0..size).each do |index| %>
        <tr>
          <td><%= team_a_players[index].name if team_a_players[index]%></td>
          <td><%= team_b_players[index].name if team_b_players[index]%></td>

        </tr>
      <% end %>


    </tbody>
  </table>

</div>