<p id="notice"><%= notice %></p>

<h1>Games</h1>

<table class="table">
  <thead>
    <tr>
      <th>When</th>
      <th>Where</th>
      <th>Team A</th>
      <th>Team B</th>
      <th>Format</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @games.each do |game| %>
      <tr>
        <td><%= game.when.strftime("%m/%d/%Y") %></td>
        <td><%= game.where %></td>
        <td><%= game.team_a[:name] %></td>
        <td><%= game.team_b[:name] %></td>
        <td><%= game.format %></td>
        <td><%= link_to 'Show', game %></td>
        <td><%= link_to 'Edit', edit_game_path(game) %></td>
        <td><%= link_to 'Destroy', game, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

