<p id="notice"><%= notice %></p>

<h1>Games</h1>

<table class="table">
  <thead>
    <tr>
      <th>When</th>
      <th>Where</th>
      <th>Team A</th>
      <th>Team B</th>
      <th>Format</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @games.each do |game| %>
      <tr>
        <td><%= game.scheduled_date.strftime("%m/%d/%Y") %></td>
        <td><%= game.where %></td>
        <td><%= game.team_a.name %></td>
        <td><%= game.team_b.name %></td>
        <td><%= game.game_format.name %></td>

        <% if user_signed_in? and
            (current_user.id == game.team_a.created_by_id or
             current_user.id == game.team_b.created_by_id) %>
          <td><%= link_to 'Show', game %></td>
          <td><%= link_to 'Edit', edit_game_path(game) %></td>
          <td><%= link_to 'Destroy', game, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Game', new_game_path if user_signed_in? %>
